{
  "name": "memefun-protocol",
  "version": "1.0.0",
  "description": "MemeFun Protocol - Advanced Solana memecoin platform with governance, anti-rug protection, and comprehensive tooling",
  "private": true,
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "build": "npm run build --workspaces",
    "dev": "npm run dev --workspace=@memefun/frontend",
    "test": "npm run test --workspaces",
    "test:unit": "npm run test:unit --workspaces",
    "test:integration": "npm run test:integration --workspaces",
    "test:e2e": "npm run test:e2e --workspace=@memefun/frontend",
    "test:visual": "npm run test:visual --workspace=@memefun/frontend",
    "test:coverage": "npm run test:coverage --workspaces",
    "test:watch": "npm run test:watch --workspaces",
    "test:security": "npm run test:security --workspace=@memefun/programs",
    "clean": "npm run clean --workspaces && rm -rf node_modules",
    "install:all": "npm install",
    "build:sdk": "npm run build --workspace=@memefun/sdk",
    "build:ui": "npm run build --workspace=@memefun/ui",
    "build:programs": "npm run build --workspace=@memefun/programs",
    "build:frontend": "npm run build --workspace=@memefun/frontend",
    "deploy:local": "npm run deploy:local --workspace=@memefun/programs",
    "deploy:devnet": "npm run deploy:devnet --workspace=@memefun/programs",
    "deploy:mainnet": "npm run deploy:mainnet --workspace=@memefun/programs",
    "lint": "npm run lint --workspaces",
    "lint:fix": "npm run lint:fix --workspaces",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "type-check": "npm run type-check --workspaces",
    "storybook": "npm run storybook --workspace=@memefun/frontend",
    "build-storybook": "npm run build-storybook --workspace=@memefun/frontend",
    "chromatic": "npm run chromatic --workspace=@memefun/frontend",
    "playwright": "npm run playwright --workspace=@memefun/frontend",
    "playwright:ui": "npm run playwright:ui --workspace=@memefun/frontend",
    "playwright:report": "npm run playwright:report --workspace=@memefun/frontend",
    "test:a11y": "npm run test:a11y --workspace=@memefun/frontend",
    "test:performance": "npm run test:performance --workspace=@memefun/frontend",
    "test:load": "npm run test:load --workspace=@memefun/frontend",
    "test:contract": "npm run test:contract --workspace=@memefun/programs",
    "test:anchor": "npm run test:anchor --workspace=@memefun/programs",
    "validate": "npm run lint && npm run type-check && npm run test",
    "validate:ci": "npm run lint && npm run type-check && npm run test && npm run test:coverage",
    "prepare": "husky install",
    "pre-commit": "lint-staged"
  },
  "keywords": [
    "solana",
    "memecoin",
    "defi",
    "anchor",
    "typescript",
    "react",
    "blockchain",
    "cryptocurrency",
    "governance",
    "anti-rug",
    "monorepo",
    "testing",
    "storybook",
    "playwright"
  ],
  "author": "MemeFun Protocol Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/memefun-meme/memefun-protocol.git"
  },
  "bugs": {
    "url": "https://github.com/memefun-meme/memefun-protocol/issues"
  },
  "homepage": "https://github.com/memefun-meme/memefun-protocol#readme",
  "devDependencies": {
    "prettier": "^2.8.8",
    "typescript": "^5.0.0",
    "@types/node": "^18.15.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.2",
    "eslint": "^8.45.0",
    "@typescript-eslint/eslint-plugin": "^6.2.0",
    "@typescript-eslint/parser": "^6.2.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "jest": "^29.5.0",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^14.4.3",
    "jest-environment-jsdom": "^29.5.0",
    "jest-axe": "^7.0.0",
    "@storybook/react": "^6.5.16",
    "@storybook/addon-essentials": "^6.5.16",
    "@storybook/addon-interactions": "^6.5.16",
    "@storybook/addon-a11y": "^6.5.16",
    "@storybook/addon-viewport": "^6.5.16",
    "@storybook/addon-docs": "^6.5.16",
    "@storybook/addon-controls": "^6.5.16",
    "@storybook/addon-actions": "^6.5.16",
    "@storybook/addon-backgrounds": "^6.5.16",
    "@storybook/testing-library": "^0.2.2",
    "playwright": "^1.37.0",
    "@playwright/test": "^1.37.0",
    "chromatic": "^6.12.0",
    "@axe-core/playwright": "^4.6.1",
    "lighthouse": "^10.4.0",
    "msw": "^1.2.1",
    "concurrently": "^8.2.0",
    "cross-env": "^7.0.3",
    "nodemon": "^2.0.22",
    "rimraf": "^5.0.1",
    "npm-run-all": "^4.1.5"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "packageManager": "npm@9.0.0",
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run validate"
    }
  }
}